
<%# @name
"rating"
"user_ratings_total"
@vicinity
@photos
@lat
@lng
@price_level
@opening_hours %>



<div>
  <% @restaurants.each do |r| %>
    <div class="card-trip">
        <%= image_tag"card_image.png" %>
      <div class="card-trip-infos">
        <div>
          <h2><%= r.name %></h2>
          <p><%= image_tag"star_icon.png" %> <%= r.rating %> (500 reviews)</p>
        </div>
        <div class="d-flex">
            <div class="like">
            <%= image_tag"heart_icon.png" %>
            </div>
            <div class="info">
            <%= image_tag"Information_icon.png" %>
            </div>
          </div>
      </div>
    </div>
  <% end %>

  <div class="index-buttons">
    <div class="col-sm-12 reject-button">
      <%= link_to "#" do %>
        <i class="fa-solid fa-x"></i>
      <% end %>
    </div>

    <div class="col-sm-12 accept-button">
      <%= link_to "#" do  %>
        <i class="fa-solid fa-check"></i>
      <% end %>
    </div>
  </div>
</div>
