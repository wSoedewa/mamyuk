<% @restaurants.each do |r| %>
  <div class="card-trip">
      <%= image_tag"card_image.png" %>
    <div class="card-trip-infos">
      <div>
        <div>
          <div>
            <h2><%= r.name %></h2>
          </div>
        <div class="like">
          <%= image_tag"heart_icon.png" %>
        </div>
        <div class="info">
          <%= image_tag"Information_icon.png" %>
        </div>
        </div>
        <div>
          <p><%= r.location %></p>
          <p><%= image_tag "star_icon.png" %> <%= r.rating %></p>
        </div>
      </div>
      <div class="d-flex">
      </div>
    </div>
  </div>
<% end %>
