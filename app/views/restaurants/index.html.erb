<div class="container">

  <div class="row">
    <div class="col-12">
      <div class="justify-content-center">
        <h1 class="index-header">Et Voila!</h1>
      </div>
        <div class="card-trip">
          <%= image_tag"card_image.png" %>
        <div class="card-trip-infos">
          <div>
            <h2>Le Pizza</h2>
            <p><%= image_tag"star_icon.png" %> 4.3 (500 reviews)</p>
          </div>
            <div class="d-flex">
              <div class="like">
                <%= image_tag"heart_icon.png" %>
              </div>
              <div class="info">
                <%= image_tag"Information_icon.png" %>
              </div>
            </div>
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-6">
        <div class="reject-button">
          <%= link_to "#" do %>
          <i class="fa-solid fa-x"></i>
        <% end %>
        </div>
      </div>

      <div class="col-6">
        <div class="accept-button">
          <%= link_to "#" do  %>
            <i class="fa-solid fa-check"></i>
          <% end %>
      </div>
    </div>

</div>
