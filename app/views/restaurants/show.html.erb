<div class="show-page">
  <div class="class1">
    <%= image_tag "card_image", class:"card-image" %>
    <button class="btn btn-arrow"> <%= image_tag"down_button" %></button>
  </div>
  <div class="class2">
    <div class="container">
      <h1><%= @restaurant.name %></h1>
        <p>Cuisine: <%= @restaurant.cuisine %></p>
        <p>Price: <%= @restaurant.price %></p>
        <p> Rating: <%= @restaurant.rating %></p>
        <p>Favorite Menus:</p>
      <div class="favorite-menu">
        <div>
          <blockquote class="menu-block">
            <p>Pizza Marinara</p>
          </blockquote>
        </div>
        <div>
          <blockquote class="menu-block">
            <p>Pizza Tutti Fruity</p>
          </blockquote>
        </div>
        <div>
          <blockquote class="menu-block">
            <p>Bolognese</p>
          </blockquote>
        </div>
        <div>
          <blockquote class="menu-block">
            <p>Spaghetti Carbonara</p>
          </blockquote>
        </div>
      </div>
      <div class="button-base menu-button">
        <%= link_to "Check Full Menu", "#" %>
      </div>
      <div class="location">
          <p>Location: <%= @restaurant.location %></p>
      </div>
      <div>
        <%= image_tag"map.png", class:"map-image" %>
      </div>
      <div class="review" >
        <p>Reviews:</p>
          <blockquote class="blockquote">
            <p>“Amazing Pizza! Will come back again”</p>
            <p>-Matteo Vigolo</p>
          </blockquote>
      </div>
    </div>
  </div>
</div>
