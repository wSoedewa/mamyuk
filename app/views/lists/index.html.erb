<div class="container">

  <div class="list-container">
    <div class="list-header">
      <h1>Lists</h1>
      <%= link_to new_list_path do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>
    <div class="list">
      <% @lists.each do |list| %>
        <div class="list-box">
          <ul>
            <div class="list-desc">
              <%= link_to list_path do %>
                <li>
                  <h2><%= list.name %></h2>
                </li>
              <% end %>
            </div>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
