<div class="container">

  <div class="list-container">
    <div class="list-header">
      <h1>Lists</h1>
      <i class="fa-solid fa-plus"></i>
    </div>
    <div class="list">
      <% @lists.each do |list| %>
        <div class="list-box">
          <ul>
            <div class="list-desc">
              <li>
                <h2><%= list.name %></h2>
              </li>
            </div>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
</div>
