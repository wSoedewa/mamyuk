{
  "background_color": "#FFFFFF",
  "description": "Mamyuk is your restaurant finder companion app. If you can't decide what to eat, we'll help you pick a place with three simple questions.",
  "display": "standalone",
  "name": "Mamyuk",
  "short_name": "Mamyuk",
  "theme_color": "#FACA5B",
  "icons": [
    <% files = Dir.entries(Rails.root.join("app/assets/images/icons/")).select {|f| !File.directory? f} %>
    <% files.each_with_index do |file, index| %>
      <% match = file.match(/.+-(?<size>\d{2,3}x\d{2,3}).png/) %>
      {
        "src": "<%= image_path "icons/#{file}" %>",
        "sizes": "<%= match && match[:size] %>",
        "type": "image/png"
      }<%= "," unless (files.size - 1) == index %>
    <% end %>
  ]
}
